# Copy this file to a file named Gemfile.local to add these gems to your dev toolset
# Feel free to modify Gemfile.local to suit your own preferences
group :development do
  gem 'rake'
  gem 'gem-release'
  gem 'rubocop'
  gem 'listen', '~> 3.0', (RUBY_VERSION < '2.2' ? '< 3.1' : '> 0') # Dependency of guard, 3.1 requires Ruby 2.2+
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-rubocop'
  gem 'guard-cucumber'
end
